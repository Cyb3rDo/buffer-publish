{
  "name": "@bufferapp/tabs",
  "version": "0.0.1",
  "description": "Buffer Tabs Package",
  "main": "index.js",
  "scripts": {
    "start": "start-storybook -p 9001",
    "lint": "eslint . --ignore-pattern coverage node_modules",
    "test": "npm run lint && sh ../../package_test.sh",
    "test-watch": "jest --watch",
    "test-update": "jest -u"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@bufferapp/*)"
    ],
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "author": "emily@buffer.com",
  "dependencies": {
    "@bufferapp/publish-shared-components": "0.0.1"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "3.1.4",
    "@storybook/react": "3.1.3",
    "eslint": "3.19.0",
    "jest": "19.0.2",
    "storybook-addon-a11y": "3.0.0"
  }
}
