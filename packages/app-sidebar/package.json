{
  "name": "@bufferapp/app-sidebar",
  "version": "0.0.1",
  "description": "The sidebar for the Buffer suite of products",
  "main": "index.js",
  "scripts": {
    "start": "start-storybook -p 9001",
    "lint": "eslint . --ignore-pattern coverage node_modules",
    "test": "yarn run lint && sh ../../package_test.sh",
    "test-watch": "jest --watch",
    "test-update": "jest -u"
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!@bufferapp/*)"
    ],
    "verbose": true,
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    }
  },
  "author": "hamstu@gmail.com",
  "dependencies": {
    "@bufferapp/login": "0.0.1",
    "@bufferapp/components": "0.5.22",
    "@bufferapp/async-data-fetch": "0.0.1"
  },
  "devDependencies": {
    "@storybook/addon-storyshots": "3.1.4",
    "@storybook/react": "3.1.3",
    "eslint": "3.19.0",
    "jest": "19.0.2",
    "storybook-addon-a11y": "3.0.0"
  }
}
